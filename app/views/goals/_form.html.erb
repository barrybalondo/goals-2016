<div class="col-md-4 col-md-offset-4">
	<%= form_for([@goal.user, @goal]) do |f| %>
		<p>
			<%= f.label :desciption %><br>
			<%= f.text_area :description, cols: "60"%>
		</p>

		<p>
			<%= f.submit class: "btn btn-primary"%>
			<%= link_to "Cancel", user_path(@goal.user), class: "btn btn-primary"%>
		</p>
	<% end %>
</div>